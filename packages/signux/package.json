{
  "name": "signux",
  "version": "1.0.0",
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./operators": {
      "import": "./dist/operators/index.js",
      "types": "./dist/operators/index.d.ts"
    }
  },
  "scripts": {
    "prebuild": "bun x rimraf ./dist",
    "build": "bun ./scripts/build.ts && tsc",
    "prepublishOnly": "bun run build",
    "lint": "eslint .",
    "ts:check": "tsc --noEmit"
  }
}
